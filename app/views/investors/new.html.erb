<%= form_for :investor, url: investors_path do |f| %>
  <% if @investor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@investor.errors.count, "error") %>:
      </h2>
      <ul>
        <% @investor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </p>
  
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
 
  <p>
    <%= f.label :image_path %><br>
    <%= f.text_field :image_path %>
  </p>
  
  <p>
    <%= f.label :money %>(development only)<br>
    <%= f.number_field :money %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>