<%= form_for :company, url: company_path do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@company.errors.count, "error") %>:
      </h2>
      <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :value %>(development only)<br>
    <%= f.number_field :value %>
  </p>
  
  <p>
    <%= f.label :stock %>(development only)<br>
    <%= f.number_field :stock %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>